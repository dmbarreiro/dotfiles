
set editing-mode vi
# Change prompt depending on current mode
set show-mode-in-prompt on
# Show all completions as soon as I press tab
set show-all-if-ambiguous on
set completion-ignore-case on
#set keymap vi
set keymap vi-command
# Mappings below apply to command mode

# Delete from cursor till end of word
#",x": "cw"
#",z": "\C-w"

# Clear screen
"\C-l": clear-screen

set keymap vi-insert
# Mappings below apply to insert mode

# Go to normal mode
",j": vi-movement-mode
# Clear line, not fully working
",dd": "\C-u"
# Clear screen
"\C-l": clear-screen
